#!/bin/sh

# Check if -P option is used
if echo "$@" | grep -q -- "-P"; then
    # Remove -P option and use sed instead
    args=$(echo "$@" | sed 's/-P//')
    pattern=$(echo "$args" | awk '{print $1}')
    file=$(echo "$args" | awk '{print $2}')
    
    # Use sed as an alternative to grep -P
    sed -n "/$pattern/p" $file
    exit $?
fi

# Otherwise, pass all arguments to the real grep
/bin/grep "$@"
exit $? 